		"tailwindcss-touch": "1.0.1",
		"typescript": "5.5.4",
		"typescript-eslint": "8.0.0-alpha.20",
		"vite": "5.3.4",
		"vitest": "2.0.0"
	},
	"type": "module",
	"dependencies": {
		"es-toolkit": "1.13.1",
		"typesafe-i18n": "5.26.2",
		"zod": "3.23.8"
